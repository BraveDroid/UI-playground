<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_snackbarActivity_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.bravedroid.playground.notifications.SnackbarActivity">

        <Button
            android:id="@+id/button_snackbarActivity_showSuccessSnackbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/colorSuccess"
            android:padding="12dp"
            android:text="@string/snackbar_show_success_snackbar"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/button_snackbarActivity_showWarningSnackbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <Button
            android:id="@+id/button_snackbarActivity_showWarningSnackbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/colorWarning"
            android:padding="12dp"
            android:text="@string/snackbar_show_warning_snackbar"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/button_snackbarActivity_showErrorSnackbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_snackbarActivity_showSuccessSnackbar" />

        <Button
            android:id="@+id/button_snackbarActivity_showErrorSnackbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/colorError"
            android:padding="12dp"
            android:text="@string/snackbar_show_error_snackbar"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_snackbarActivity_showWarningSnackbar" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
